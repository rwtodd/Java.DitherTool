<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<VBox xmlns:fx="http://javafx.com/fxml/1" styleClass="mainFxmlClass"  
      fx:controller="rwt.dithertool.PaletteChooserController">
    <stylesheets>
        <URL value="@/styles/chooserStyles.css"/>
    </stylesheets>
    <HBox>
        <Label>Common Palettes:</Label>
        <ComboBox fx:id="typicalList" />
    </HBox>
    <FlowPane fx:id="colorDisplay" />    
    <ButtonBar>
        <buttons>
           <Button onAction="#btnApply">Apply</Button>
           <Button onAction="#btnClose">Close</Button>    
        </buttons>
    </ButtonBar>
</VBox>
